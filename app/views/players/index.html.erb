<h1>NFL PLAYERS</h1>


<div>
  <h2><%= link_to "QUARTERBACKS", quarterbacks_path %></h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>NFL Team</th>
    </tr>
    <% @players.each do |player| %>
      <% if player.position == "QB" %>
        <tr>
          <td><%= link_to player.fullname, player_path(player) %></td>
          <td><%= player.position %></td>
          <td><%= link_to player.pro_team.full_name, pro_team_path(player.team) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>

